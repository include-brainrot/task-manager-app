datasource db {
  provider = "mysql"
  url      = env("MYSQL_STRING")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @default(autoincrement())
  userId   String @unique @db.VarChar(16)
  email    String @unique @db.VarChar(64)
  password String @db.VarChar(128)

  deleted DateTime?
  created DateTime  @default(now())
  updated DateTime  @updatedAt

  roles    UserRole[]
  sessions Session[]

  @@id([id])
}

model Role {
  role      String @db.VarChar(16)
  authority Int    @unique @db.SmallInt

  users UserRole[]

  @@id([role])
}

model UserRole {
  roleId String @db.VarChar(16)
  userId Int

  deleted DateTime?
  created DateTime  @default(now())
  updated DateTime  @updatedAt

  role Role @relation(fields: [roleId], references: [role])
  user User @relation(fields: [userId], references: [id])

  @@id([roleId, userId])
}

model Session {
  id        Int    @default(autoincrement())
  sessionId String @unique @db.VarChar(24)
  userId    Int

  deleted DateTime?
  created DateTime  @default(now())
  updated DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@id([id])
  @@index([userId])
}
