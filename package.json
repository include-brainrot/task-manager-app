{
  "private": true,
  "name": "koa-next-template",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.16.1 <19.0.0"
  },
  "packageManager": "yarn@4.0.1",
  "author": "Elias Mawa <elias@mawa.dev>",
  "license": "GPL-3.0",
  "homepage": "https://github.com/miniaxolotl/koa-next-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miniaxolotl/koa-next-template.git"
  },
  "bugs": {
    "url": "https://github.com/miniaxolotl/koa-next-template/issues"
  },
  "workspaces": [
    "libs/*",
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "/** @linting */": "",
    "lint": "yarn lint:libs && yarn lint:api",
    "lint:libs": "yarn workspaces foreach -pti --from '@lib/*' -W run lint",
    "lint:api": "yarn workspace @package/api run lint",
    "/** @services */": "",
    "service:start": "docker-compose up -d",
    "service:stop": "docker-compose stop",
    "services:start": "yarn service:start database-db2",
    "services:stop": "yarn service:stop database-db2",
    "/** @testing */": "",
    "test:libs": "yarn workspaces foreach -pti --from '@lib/*' -W run test",
    "test:api": "yarn workspace @package/api run test",
    "/** @building */": "",
    "build": "yarn rollup:libs && yarn build:api",
    "build:libs": "yarn workspaces foreach -ti --from '@lib/*' -W run rollup",
    "build:api": "yarn workspace @package/api run build",
    "build:web": "yarn workspace @package/web run build",
    "rollup:libs": "yarn workspaces foreach -ti --from '@lib/*' -W run rollup",
    "rollup:watch": "yarn workspaces foreach -j unlimited -pi --from '@lib/*' -W run rollup:watch",
    "watch:libs": "yarn workspaces foreach -j unlimited -pi --from '@lib/*' -W run rollup:watch",
    "watch:api": "yarn workspace @package/api run watch",
    "serve:api": "yarn workspace @package/api run serve",
    "start:api": "yarn workspace @package/api run start",
    "watch:web": "yarn workspace @package/web run watch",
    "start:web": "yarn workspace @package/web run start"
  },
  "dependencies": {
    "dotenv": "~16.3.1",
    "dotenv-expand": "~10.0.0"
  },
  "devDependencies": {
    "@types/node": "~18.16.1",
    "@typescript-eslint/eslint-plugin": "~6.10.0",
    "@typescript-eslint/parser": "~6.10.0",
    "eslint": "~8.53.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-plugin-prettier": "~5.0.1",
    "jest": "~29.7.0",
    "nodemon": "~3.0.1",
    "prettier": "~3.0.3",
    "tslib": "~2.6.2",
    "typescript": "~5.2.2"
  }
}
